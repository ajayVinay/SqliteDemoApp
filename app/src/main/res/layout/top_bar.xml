<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/topbar_bg_color"
    android:elevation="4dp"
    android:titleTextColor="@color/white">
    <ImageView
        android:id="@+id/topbar_back_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="@dimen/padding_5"
        android:src="@drawable/back_icon"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/topbar_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/marging_30"
        android:paddingLeft="@dimen/marging_20"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/actionbar_title" />
    <ImageView
        android:id="@+id/add_icon_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:layout_marginEnd="@dimen/marging_10"
        android:layout_marginRight="@dimen/marging_15"
        android:src="@drawable/add_icon"
        android:visibility="invisible" />
    <ImageView
        android:id="@+id/edit_icon_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:layout_marginEnd="@dimen/marging_10"
        android:layout_marginRight="@dimen/marging_15"
        android:src="@drawable/pen_icon"
        android:visibility="invisible" />
</android.support.v7.widget.Toolbar>